
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Section End -->
<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Danh Mục </span>
                    </div>
                    <ul>
                        <li ng-repeat="lsp in listloaidt">
                            <a href="#" ng-click="GetProductCate(lsp.maLoai)">{{lsp.tenLoai}}</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#" class="formsearch">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" ng-model="tk.name" placeholder="Nhập từ khoá cầ tìm kiếm">
                            <button ng-click="FindProduct(tk)" class="site-btn"><a ng-click="FindProduct(tk)">SEARCH</a></button>
                        </form>
                       
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84.3743.143.46</h5>

                            <span>Hỗ Trợ 24/7</span>
                        </div>
                    </div>
                </div>
                <div class="hero__item set-bg" >
                    <img src="~/Content/home/img/hero/banner.jpg" />
                    <div class="hero__text">

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                <div class="col-lg-3">
                    <div class="categories__item set-bg" >
                        <img src="~/Content/home/img/categories/cat-1.jpg" />
                        <h5><a href="#">Mojang</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" >
                        <img src="~/Content/home/img/categories/cat-2.jpg" />
                        <h5><a href="#">ThinkGeek</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg">
                        <img src="~/Content/home/img/categories/cat-3.jpg" />
                        <h5><a href="#">Jinx</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg">
                        <img src="~/Content/home/img/categories/cat-4.jpg" />
                        <h5><a href="#">Mattel</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg">
                        <img src="~/Content/home/img/categories/cat-3.jpg" />
                        <h5><a href="#">Schleich</a></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản Phẩm Mới</h2>
                </div>

            </div>
        </div>
        <div class="row featured__filter" ng-controller="NewCtrl">
            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat" ng-repeat="ln in listnew">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg">
                        <img src="~/Content/Asset/images/{{ln.hinhAnh}}">

                    </div>
                    <div class="featured__item__text" ng-click="GetDetail(ln.maCamera)">
                        <h6><a href="">{{ln.tenCamera}}</a></h6>
                        <h5 style="color:#bf081f;">{{ln.gia | number : value=""}}</h5>
                    </div>
                </div>
                @*</div>*@
            </div>

        </div>
    </div>
</section>
<!-- Featured Section End -->
<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="~/Content/home/img/banner/1.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="~/Content/home/img/banner/2.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
