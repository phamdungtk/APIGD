
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section Begin -->
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Danh Mục </span>
                    </div>
                    <ul>
                        <li ng-repeat="lsp in listloaidt">
                            <a href="#" ng-click="GetProductCate(lsp.maLoai)">{{lsp.tenLoai}}</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="Nhập từ khoá cầ tìm kiếm">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84.3743.143.46</h5>

                            <span>Hỗ Trợ 24/7</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Breadcrumb Section Begin -->
<div class="container-fluid">
    <img style="height:250px;width:100%;" src="~/Content/home/img/sunlight-black-sunset-sea-cityscape-bay-150562-wallhere.com.png" />
    <div class="text-center">
        <h2>Chi Tiết Sản Phẩm</h2><br>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad" ng-controller="ProDetail" ng-init="LoadDetail()">
    <div class="container"ng-repeat="dt in dtl">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="~/Content/Asset/images/{{dt.hinhAnh}}" alt="">
                    </div>
                    <div class="product__details__pic__slider owl-carousel">
                        <img src="~/Content/Asset/images/{{dt.hinhAnh}}"
                             src="~/Content/Asset/images/{{dt.hinhAnh}}" alt="">
                        <img src="~/Content/Asset/images/{{dt.hinhAnh}}"
                             src="~/Content/Asset/images/{{dt.hinhAnh}}" alt="">
                        <img src="~/Content/Asset/images/{{dt.hinhAnh}}"
                             src="~/Content/Asset/images/{{dt.hinhAnh}}" alt="">
                        <img src="~/Content/Asset/images/{{dt.hinhAnh}}"
                             src="~/Content/Asset/images/{{dt.hinhAnh}}" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>{{dt.tenCamera}}</h3>
                    <div class="product__details__rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                        <span>(18 reviews)</span>
                    </div>
                    <div class="product__details__price">{{ dt.gia | number : value="" }} vnđ</div>
                    <p>{{dt.soLuong}}</p>

                    <a href="#" ng-click="AddCart({maCamera:dt.maCamera,hinhAnh:dt.hinhAnh,tenCamera:dt.tenCamera,gia:dt.gia})" class="primary-btn add-to-cart addcart">ADD TO CARD</a>
                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                    <ul>
                        <li><b>Chíp</b> <span>{{ dt.chip }}</span></li>
                        <li><b>Độ Phân giải</b> <span>{{ dt.doPhanGiai }}</span></li>
                        <li><b>Ống Kính</b> <span>{{ dt.ongKinh }}</span></li>
                        <li>
                            <b>
                                Tầm Quan Sát</b>
                                <span>{{ dt.tamQuanSat }}</span>
                        </li>
                  
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                               aria-selected="true">Description</a>
                        </li>
                    </ul>
                    @*<div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">

                                <p>{{dt.mota}}.</p>
                            </div>
                        </div>

                    </div>*@
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->
<!-- Related Product Section Begin -->
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Sản Phẩm Tương Tự</h2>
                </div>
            </div>
        </div>
        <div class="row" ng-controller="SpTT">
            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat" ng-repeat="lb in listnb">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg">
                        <img  src="~/Content/Asset/images/{{lb.hinhAnh}}">
                    </div>
                    <div class="featured__item__text" ng-click="GetDetail(lb.maCamera)">
                        <h6><a href="">{{lb.tenCamera}}</a></h6>
                        <h5 style="color:#bf081f;">{{lb.gia | number : value=""}}</h5>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- Related Product Section End -->
