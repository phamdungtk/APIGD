
@{
    ViewBag.Title = "EditCate";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

@section active{
    active
}
@section title{
    Quản lý loại sản phẩm
}
<div class="content" style="background: #FFFFFF;" ng-controller="CategoryCtrl" ng-init="LoadCateByID()">
    <div class="container-fluid">
        <div class="row" ng-repeat="s in getdata">
            <div class="col-lg-8 card-body" style="margin-left: 210px;">
                <h4 style="text-align:center;">CẬP NHẬT LOẠI SẢN PHẨM</h4>
                <div class="form-horizontal">
                    <div class="form-horizontal" title="Tên hàng">
                        <div class="col-lg-12 col-sm-12 col-md-12 form-group">
                            <select name="slgrocery" style="width: 180px;" value="Hàng" ng-model="s.maHang">
                                <option value=""> ------- Loại Hàng ------- </option>
                                <option ng-repeat="s in listmh" value="{{s.maHang}}">{{s.tenHang}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-12 col-sm-12 col-md-12">
                        <input type="text" ng-model="s.tenLoai" class="form-control" placeholder="Nhập Tên Loại Sản Phẩm" required="">
                    </div>
                    <br>
                    <div class="col-lg-12 col-sm-12 col-md-12">
                        <input type="text" ng-model="s.moTa" class="form-control" placeholder="Nhập Mô Tả" required="">
                    </div>
                    <br>
                </div>
                <br>
                <div class="form-inline">
                    <div class="col-lg-12 col-sm-12 col-md-12">
                        <input ng-click="SaveCate(s)" value="Thêm" type="button" name="btn_addcategory" class=" btn btn-sm btn-success btn-create">
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
            </div>
        </div>
    </div>
</div>